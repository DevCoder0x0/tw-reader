<% include partials/header %>

    <div class="container">

        <div class="container">
            <h1>tw-reader Timeline</h1>

            <ul>
                <li>
                    <a href="/user/">User</a>
                </li>
                <li>
                    <a href="/timeline/">Timeline</a>
                </li>
                <li>
                    <a href="/friends/">Friends</a>
                </li>
            </ul>


            <h4>Timeline</h4>
            <ul>
                <% tweets.forEach( tweet => { 
                    const text = tweet.full_text || tweet.text;
                    const tweetstr = `@${tweet.user.name} - ${text}`; %>
                    <li>
                        <%= tweetstr %>
                    </li>
                    <% }) %>
            </ul>
        </div>

    </div>

